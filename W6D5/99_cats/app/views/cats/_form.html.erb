<% if type == :new %>
  <% action_url = cats_url %>
  <% button_text = "Create Cat" %>
<% else %>
  <% action_url = cat_url(cat) %>
  <% button_text = "Update Cat" %>
<% end %>

<form action="<%= action_url %>" method="post">
  <% if type == :edit %>
    <input type="hidden" name="_method" value="patch">
  <% end %>
  <label for="name">name:
    <input type="text" id="name" name="cat[name]" value="<%= cat.name %>">
  </label>
  <br>
  <label for="sex">sex:
    <input type="radio" name="cat[sex]" value="M" <%= @cat.sex == "M" ? "checked" : "" %>>Male
    <input type="radio" name="cat[sex]" value="F" <%= @cat.sex == "F" ? "checked" : "" %>>Female
  </label>
  <br>
  <label for="color">Color:
    <select id="color" name="cat[color]">
      <option disabled selected>-- Please Select --</option>
      <option value="brown" <%= @cat.color == "brown" ? "selected" : "" %>> Brown </option>
      <option value="yellow" <%= @cat.color == "yellow" ? "selected" : "" %>> Yellow </option>
      <option value="black" <%= @cat.color == "black" ? "selected" : "" %>> Black </option>
      <option value="white" <%= @cat.color == "white" ? "selected" : "" %>> White </option>
      <option value="orange" <%= @cat.color == "orange" ? "selected" : "" %>> Orange </option>
    </select>
  </label>
  <br>
  <label for="birth_date">Birth Date: 
    <input type="date" id="birth_date" name="cat[birth_date]"
      value="<%= @cat.birth_date %>">
  </label>
  <br>
  <label for="description">Description:
  <textarea name="cat[description]"
    value="hello">
  </textarea>
  </label>
  
  <input type="submit" value="<%= button_text %>">
</form>